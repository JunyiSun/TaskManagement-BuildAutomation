extends ../layout
block content
  .container
    h1 WELCOME TO ADP EVENT MANAGEMENT TOOL!
    .row
      .col-md-5.m-signForm
        form(method="POST", action="/user/signup")#dSignupForm
          .modal-header Sign Up
          .modal-body.clearfix
            span.err_tip(style="display:none;")
            .form-group.clearfix
              label(for="dSignupEmail") Email
              input#dSignupEmail.form-control(name="user[email]", type="text", placeholder="Email")
            .form-group.clearfix
              label(for="dSignupPassword") Password
              input#dSignupPassword.form-control(name="user[password]", type="password")
            .form-group.clearfix
              label(for="dConfirmPassword") Confirm Password
              input#dConfirmPassword.form-control(name="user[confirmpassword]", type="password")
            .form-group.clearfix
                label(for="dSignupName") Name
                input#dSignupName.form-control(name="user[name]", type="text", placeholder="Name")
            .form-group.clearfix
                label.col-sm-2.control-label(for="dSignupRole") Role
                input#dSignupRole.form-control(name="user[role]", type="text", placeholder="Administrator, Auditor, or Specialist")
          .modal-footer
            button.btn.btn-success(type="submit") Sign Up
      .col-md-2
      .col-md-5.m-signForm
              form(method="POST", action="/user/signin")#dSigninForm
                .modal-header Log In
                .modal-body.clearfix
                  span.err_tip(style="display:none;")
                  .form-group.clearfix
                    label(for="dSigninEmail") Email
                    input#dSigninEmail.form-control(name="user[email]", type="text")
                  .form-group.clearfix
                    label(for="dSigninPassword") Password
                    input#dSigninPassword.form-control(name="user[password]", type="password")
                .modal-footer
                  button.btn.btn-success(type="submit") Log In


